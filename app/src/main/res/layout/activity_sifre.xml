<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    tools:context="com.evciller.sifrele.Sifre">

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="Tekrar Belirle"
        android:textSize="12sp" />

    <Button
        android:id="@+id/kayit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reset"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="Kaydet"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/sifreler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/degistir"

        android:ems="10"
        android:gravity="center"
        android:inputType="none"
        android:textIsSelectable="true" />

    <Button
        android:id="@+id/sifreDegis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sifreler"
        android:layout_centerHorizontal="true"
        android:text="Değiştir"
        android:textSize="12sp" />

    <Button
        android:id="@+id/degistir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sifreDegis"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/sifreDegis"
        android:text="Button" />
</RelativeLayout>
